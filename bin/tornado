#!/usr/bin/env ruby

require 'tornado'
require 'optparse'

options = Hash.new

optparse = OptionParser.new do |opts|
  opts.banner = "Tornado"

  options[:upload] = nil
  opts.on('-u', '--upload FILE', 'Upload FILE') do |file|
    options[:upload] = file
  end

  options[:peers] = false
  opts.on('-p', '--peers', 'Ask for known peers') do
    options[:peers] = true
  end
end.parse!

if options[:upload]
  Tornado::Network.upload options[:upload]
elsif options[:peers]
  puts Tornado::Network.peers
end